<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="330dp"
    android:layout_height="wrap_content"
    android:background="@drawable/background_edit_nickname"
    android:orientation="vertical"
    android:padding="12dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/edit_nick_name_title"
        android:textColor="@color/white"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:text="@string/edit_nick_name_hint"
        android:textColor="@color/white"/>

    <EditText
        android:id="@+id/dialog_edit_nickname_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:maxLength="20"
        android:minHeight="34dp"
        android:inputType="textMultiLine"
        android:singleLine="false"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/dialog_edit_nickname_cancel"
            android:layout_width="65dp"
            android:layout_height="26dp"
            android:background="@drawable/btn_edit_nickname_cancel_nal"
            android:text="@string/cancel"/>

        <Button
            android:id="@+id/dialog_edit_nickname_confirm"
            android:layout_width="65dp"
            android:layout_height="26dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/btn_edit_nickname_confirm"
            android:text="@string/confirm"
            android:textColor="@color/white"/>
    </RelativeLayout>
</LinearLayout>